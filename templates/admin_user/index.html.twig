{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>List of users</h3>
                <a class="mb-2 btn btn-primary" href="{{ path('admin_user_new') }}">Add user</a>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Birthdate</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ loop.index}}</th>
                            <td>{{user.firstName}}  {{user.middleName}} {{user.lastName}}</td>
                            <td>{{user.email}}</td>
                            <td>{{user.birthDate|date('d-m-Y')}}</td>
                            <td>{% if user.gender %}Male{% else %}Female{% endif%}</td>
                            <td>{{user.phone}}</td>
                            <td>{% if user.userStatus %}Active{% else %}Inactive{% endif%}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>



{% endblock %}
